<!DOCTYPE html>
<html>

<head>

    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet"
        integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
    <link type="text/css" rel="stylesheet" href="/css/dashboard_style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
</head>

<body class="home">
    <h1><i class="fa fa-dashboard" style="font-size:48px;color:black"></i>
        <b><%= f_name %>'s Dashboard</b></h1>
    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                <div class="logo">
                </div>
                <div class="navi">
                    <ul>

                        <!-- <li><a href="#"><i class="fa fa-home" style="font-size:20px" aria-hidden="true"></i><span
                                    class="hidden-xs hidden-sm">Home</span></a></li>
                        <li><a href="#"><i class="material-icons" style="font-size:20px">note_add</i><span
                                    class="hidden-xs hidden-sm">Add Invoice</span></a></li>
                      
                        <li><a href="#"><i class="fa fa-bell" style="font-size:20px" aria-hidden="true"></i><span
                                    class="hidden-xs hidden-sm">Notifications</span></a></li>
                        <li><a href="#"> <i class="fa fa-sign-out" style="font-size:20px" aria-hidden="true"></i><span
                                    class="hidden-xs hidden-sm">Logout</span></a></li> -->

                        <li><form action="/lawyer_dashboard" method="GET"><button type="submit"><i class="fa fa-home" style="font-size:20px" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Dashboard</span></button></form></li>
                        <li><form action="" method="GET"><button type="submit"><i class="material-icons" style="font-size:20px" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Add Invoice</span></button></form></li>
                        <li><form action="/lawyer_notification" method="GET"><button type="submit"><i class="fa fa-bell" style="font-size:20px" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Notifications</span></button></form></li>
                        <li><form action="/logout?_method=DELETE" method="POST"><button type="submit"><i class="fa fa-sign-out" style="font-size:20px" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Log Out</span></button></form></li>

                    </ul>
                </div>
            </div>
            <table>
                <caption>
                    <div align="left" style="font-size:200%;"><b>Active Cases:</b></div>
                </caption> <tr style="width:100%">
                    <th>Case Type</th>
                    <th>Case Name</th>
                    <th>Description</th>
                    <th>Case No</th>
                    <th>Hearing Date</th>
                    <th>Descision Date</th>
                </tr>
                
                
                
                <% items.forEach(function(item){
           if(item.isResolved == 'N') { %>
                <tr>
                    <td><%= item.case_type %></td>
                    <td><%= item.case_name %></td>
                    <td><%= item.case_descp %></td>
                    <td><%= item.court_case_no %></td>
                    <td><%= item.h_date %></td>
                    <td><%= item.n_h_date %></td>
                
                </tr>
                
                <%  } }); %>




            </table>
            <br>
            <table>
                <caption>
                    <div align="left" style="font-size:200%;"><b>Resolved Cases:</b></div>
                </caption>
                <tr style="width:100%">
                    <th>Case Type</th>
                    <th>Case Name</th>
                    <th>Description</th>
                    <th>Case No</th>
                    <th>Hearing Date</th>
                    <th>Descision Date</th>
                </tr>
                
                
                
                <% items.forEach(function(item){
                if(item.isResolved == 'Y') { %>
                <tr>
                    <td><%= item.case_type %></td>
                    <td><%= item.case_name %></td>
                    <td><%= item.case_descp %></td>
                    <td><%= item.court_case_no %></td>
                    <td><%= item.h_date %></td>
                    <td><%= item.n_h_date %></td>
                
                </tr>
                
                <%  } }); %>


            </table>

</body>

</html>